<%= form_with scope: :player, url: players_path, local: true do |form| %>

  <p>
    <%= form.collection_check_boxes :job_ids, @jobs, :id, :name %>
  </p>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back to Players Index', players_path %>