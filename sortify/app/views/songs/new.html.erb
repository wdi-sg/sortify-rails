<h1>Songs</h1>
<%= form_with scope: :song, url: songs_path, local: true do |f| %>

    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <%= f.collection_check_boxes :genre_ids, @genres, :id, :name %>

    <p>
        <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Back', songs_path %>