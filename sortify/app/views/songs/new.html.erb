<h1>Create New Song</h1><br>

<%= form_with scope: :song, url: songs_path, local: true do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label Genre %>:
    <%= form.collection_select :genre_id, @genres, :id, :name %>
  </p>

  <p class="error">
    <%= show_errors(@song, :title) %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', songs_path %>
