<h1>GENRES</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @genre.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to 'Show', genre_path(genre) %></td>
      <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
      <td><%= link_to 'Destroy', genre_path(genre),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>