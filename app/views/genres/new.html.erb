<%= form_with scope: :genre, url: genres_path, local: true do |form| %>

<%= form.collection_check_boxes :song_ids, @songs, :id, :name %>

<p>
  <%= form.label :name %><br>
  <%= form.text_field :name %>
</p>

<p>
  <%= form.label :description %><br>
  <%= form.text_area :description %>
</p>

<p>
  <%= form.submit %>
</p>
<% end %>
