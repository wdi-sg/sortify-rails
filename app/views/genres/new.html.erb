<h1>Genres</h1>
<%= form_with scope: :genre, url: genres_path, local: true do |f| %>
<p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.label :picture %><br>
    <%= f.text_field :picture %>
</p>

<%= f.collection_check_boxes :song_ids, @songs, :id, :name %>

<p>
    <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', songs_path %>
