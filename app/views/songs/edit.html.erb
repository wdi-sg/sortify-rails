<h1>Songs#edit</h1>

<%= form_with scope: :song, url: song_path, method: "put", local: true do |form| %>

  <%= form.collection_check_boxes :genre_ids, @genres, :id, :name %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_area :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<td><%= link_to 'delete', song_path(@song),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>