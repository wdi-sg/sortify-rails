	
<h1>Assign a job to a character</h1>
<%= form_with scope: :job, url: jobs_path, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>


	<p>

	  <%= form.collection_check_boxes :character_ids, @character, :id, :name %>
	</p>
  <p>
    <%= form.submit %>
  </p>
<% end %>